<view class='container'>
  <view class='header'>
    <v-episode class="episode" index="{{classic.index}}"></v-episode>
    <view class="like-container">
      <v-like class="like" bind:like="onLike" like="{{likeStatus}}" count="{{likeCount}}" />
      <v-button class="share-btn" open-type="share">
        <image class="share" slot="img" src="/images/icon/share.png" />
      </v-button>
    </view>
  </view>
  <v-movie hidden="{{classic.type!=100}}" img="{{classic.image}}" content="{{classic.content}}"></v-movie>
  <v-music wx:if="{{classic.type==200}}" src="{{classic.url}}" img="{{classic.image}}" content="{{classic.content}}" title="{{classic.title}}"></v-music>
  <v-essay hidden="{{classic.type!=300}}" img="{{classic.image}}" content="{{classic.content}}"></v-essay>
  <v-navi wx:if="{{!navi}}" bind:left='onNext' bind:right='onPrevious' class='navi' title="{{classic.title}}" first="{{first}}" latest="{{latest}}"></v-navi>
</view>